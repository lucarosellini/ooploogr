<configuration scan="false" debug="false">
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%-30logger{0}] %message%n</pattern>
    </encoder>
  </appender>

  <logger name="org.reactivemongo" level="ERROR" />

  <root level="DEBUG">
    <appender-ref ref="stdout" />
  </root>
</configuration>